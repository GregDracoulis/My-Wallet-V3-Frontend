.login-pg.overflow-scroll
  .navbar.navbar-default.navbar-inverse.navbar-unauth.bc-header
    .container-fluid
      .navbar-header.flex-between
        a.navbar-brand(ng-href="#/")
          img#logo.pll(src="img/logo-updated.png",alt="Blockchain")
  .flex-center.flex-justify.flex-column(ng-switch="currentStep")
    .flex.flex-justify(ui-view="alerts")
    .login-box.mhs.pos-rel
      p.type-xs.em-500.step.pos-abs(ng-switch-when="1" translate="STEP_1_RECOVER")
      p.type-xs.em-500.step.pos-abs(ng-switch-when="2" translate="STEP_2_RECOVER")
      header.flex-center.flex-between
        .flex-column
          h2.em-300.mtn(translate="RECOVER_FUNDS")
          p(translate="RECOVER_BTC_LOST")
      form.form-horizontal(name="recoveryForm")
        div(ng-switch-when="1")
          .form-group(ng-class="{'has-error': errors.email, 'has-success': success.email}")
            label.em-500(translate="EMAIL")
            input.form-control(type="email",ng-model="fields.email",autofocus,ng-blur="validate()", ng-focus="errors.email = null")
            span.help-block 
              p {{ errors.email }}
          .form-group(ng-class="{'has-error': errors.password, 'has-success': success.password}")
            label.em-500(translate="NEW_PASSWORD")
            input.form-control(type="password", name="password",ng-model="fields.password",autofocus, ng-focus="errors.password = null", ng-maxlength="255", min-entropy="25" required)
            password-entropy(password="fields.password").help-block  
            span.help-block {{ errors.password }}
          .form-group(ng-class="{'has-error': errors.confirmation, 'has-success': success.confirmation}")
            label.em-500(translate="CONFIRM_PASSWORD")
            input.form-control(type="password",ng-model="fields.confirmation",autofocus, ng-focus="errors.confirmation = null" required)
            span.help-block 
              p {{ errors.confirmation }}
        div(ng-switch-when="2")
          label(translate="YOUR_REC_PASS")
          p(translate="YOUR_REC_PASS_EXPLAIN")
          input.form-control(type="text" ng-model="mnemonic" name="mnemonic" ng-focus="errors.mnemonic = null" ng-disabled="importing" is-valid="isValidMnemonic(mnemonic)" autofocus)
          span.help-block(translate="INVALID_RECOVERY" ng-show="")
        .flex-center.flex-end.mvl
          img(ng-show="working" src="img/spinner.gif")
          button.button-primary(ng-switch-when="1" ng-click="nextStep()" ng-disabled="!recoveryForm.$valid || isValid" translate="CONTINUE")
          button.button-muted.mrm(ng-switch-when="2" ng-click="goBack()" translate="GO_BACK")
          button.button-success(ng-switch-when="2" ng-click="nextStep()" translate="RECOVER_FUNDS")

      .flex-center.flex-justify.flex-column(ng-switch-when="3")
        .level-complete.flex-center.flex-justify
          i.ti-check.bright-green
        h4.em-300.mtl(translate="RESTORE_SUCCESSFUL")
        p.em-300(translate="REDIRECTING")
